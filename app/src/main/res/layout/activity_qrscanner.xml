<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".QRScannerActivity">

    <!-- AppBar dengan tombol kembali -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/primary"
        app:title="Scan QR"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_back"
        app:layout_scrollFlags="scroll|enterAlways"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Preview kamera -->
    <androidx.camera.view.PreviewView
        android:id="@+id/cameraPreview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintBottom_toTopOf="@+id/tvHasilScan"
        android:scaleType="centerCrop" />

    <!-- Overlay frame kotak untuk arahkan scan -->
    <View
        android:id="@+id/overlayFrame"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:background="@drawable/qr_overlay"
        app:layout_constraintTop_toTopOf="@id/cameraPreview"
        app:layout_constraintBottom_toBottomOf="@id/cameraPreview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Status hasil scan -->
    <TextView
        android:id="@+id/tvHasilScan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Arahkan kamera ke QR..."
        android:textSize="16sp"
        android:padding="16dp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:background="#55000000"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
